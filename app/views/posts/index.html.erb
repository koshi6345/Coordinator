<div class="container">
  <div clsss="row my-3">
    <div class="col-12">
      <% @posts.each do |posts| %>
        <p>
          <%= link_to user_path(posts.user) do %>
            <%= attachment_image_tag(posts.user, :image, :fill, 50, 50, fallback: "no_image.jpg")%>
          <% end %>
        </p>
        <p>
          <%= posts.user.name %>
        </p>
        <p>
          <%= link_to post_path(posts) do %>
            <%= attachment_image_tag(posts, :image, :fill, 200, 300, fallback: "no-image-icon.jpg") %>
          <% end %>
        </p>
        <p>
         <%= posts.introduction %>
        </p>
        <p>
          <%= link_to "#{posts.comments.count} コメント", post_path(posts.id) %>
        </p>
        <p>
          <%= link_to "#{posts.favorits.count} いいね", post_path(posts.id) %>
        </p>
      <% end %>
    </div>
  </div>
</div>