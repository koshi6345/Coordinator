<div class="container">
  <div clsss="row my-3">
    <div class="col-12">
      <%= link_to user_path(@user) do %>
        <%= attachment_image_tag(@user, :image, :fill, 50, 50, fallback: "no_image.jpg")%>
      <% end %>
      <%= @user.name %>
      <%= attachment_image_tag(@post, :image, :fill, 300, 00, fallback: "no-image.jpg")%>
      <%= @post.introduction %>
      <% @post.tags.each do |tag| %>
        <%= tag.name %>
      <% end %>
      <% if @post.user == current_user %>
        <%= link_to "編集する", edit_post_path(@post) %>
        <%= link_to "投稿削除", post_path(@post), method: :delete %>
      <% end %>
      <% if user_signed_in? %>
        <% if @post.favorited_by?(current_user) %>
          <p>
            <%= link_to post_favorits_path(@post), method: :delete do %>
              ♥<%= @post.favorits.count %> いいね
            <% end %>
          </p>
          <% else %>
          <p>
            <%= link_to post_favorits_path(@post), method: :post do %>
              ♡<%= @post.favorits.count %> いいね
            <% end %>
          </p>
        <% end %>
      <% end %>
      <p>
        <%= @post.comments.count %> 件のコメント
      </p>
      <% @post.comments.each do |post_comment| %>
        <p>
          <%= post_comment.user.name %>
        </p>
        <p>
          <%= post_comment.comment %>
        </p>
        <p>
          <% if post_comment.user == current_user %>
            <%= link_to "コメント削除", post_comment_path(@post, post_comment), method: :delete %>
          <% end %>
        </p>
      <% end %>
      <%= form_with(model:[@post, @comment], local: true) do |f| %>
        <p>
          <%= f.text_field :comment, rows:'5',placeholder: "コメントをここに" %>
        </p>
        <p>
          <%= f.submit "送信する" %>
        </p>
      <% end %>
    </div>
  </div>
</div>