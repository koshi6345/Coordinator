<div class="container">
  <div clsss="row">
    <div class="col-12 my-2">
      <div class="text-center">
        <div class="post-background-color border p-2 m-1">
          <div class="py-1">
            <%= link_to user_path(@user) do %>
              <%= attachment_image_tag @user, :image, :fill, 50, 50, fallback: "no_image.jpg", class: "img" %>
            <% end %>
            <%= @user.name %>
          </div>
          <div class="py-1">
            <%= attachment_image_tag(@post, :image, :fill, 500, 500, fallback: "no-image.jpg")%>
          </div>
          <div class="py-1">
            <%= @post.introduction %>
          </div>
          <div class="py-1">
            <% @post.tags.each do |tag| %>
              #<%= tag.name %>
            <% end %>
          </div>
          <div class="py-1">
            <% if @post.user == current_user %>
              <%= link_to "編集する", edit_post_path(@post) %>
              <%= link_to "投稿削除", post_path(@post), method: :delete %>
            <% end %>
          </div>
          <div class="py-1">
            <% if user_signed_in? %>
              <% if @post.favorited_by?(current_user) %>
                <div class="py-1">
                  <%= link_to post_favorits_path(@post), method: :delete do %>
                    ♥<%= @post.favorits.count %> いいね
                  <% end %>
                </div>
                <% else %>
                <div class="py-1">
                  <%= link_to post_favorits_path(@post), method: :post do %>
                    ♡<%= @post.favorits.count %> いいね
                  <% end %>
                </div>
              <% end %>
            <% end %>
          </div>
          <div class="py-1">
            <%= @post.comments.count %> 件のコメント
          </div>
          <% @post.comments.each do |post_comment| %>
            <div class="py-1">
              <%= post_comment.user.name %>
            </div>
            <div class="py-1">
              <%= post_comment.comment %>
            </div>
            <div class="py-1">
              <% if post_comment.user == current_user %>
                <%= link_to "コメント削除", post_comment_path(@post, post_comment), method: :delete %>
              <% end %>
            </div>
          <% end %>
          <% if user_signed_in? %>
            <%= form_with(model:[@post, @comment], local: true) do |f| %>
              <div class="py-1">
                <%= f.text_field :comment, rows:'5',placeholder: "コメントをここに" %>
              </div>
              <div class="py-1">
                <%= f.submit "送信する" %>
              </div>
            <% end %>
          <% end %>
          <div class="py-1">
            <%= @post.impressionist_count %> 閲覧
          </div>
        </div>
      </div>
    </div>
  </div>
</div>