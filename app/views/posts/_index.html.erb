<div class="index-flex">
  <% posts.each do |post_one| %>
    <div class="post-background-color border p-2 m-1">
      <div class="py-1">
        <%= link_to user_path(post_one.user), class:"no-underline" do %>
          <%= attachment_image_tag post_one.user, :image, :fill, 100, 100, fallback: "no_image.jpg", class: "img_icon" %>
        <% end %>
        <%= post_one.user.name %>
      </div>
      <div class="py-1 img_wrap">
        <%= link_to post_path(post_one) do %>
          <%= attachment_image_tag post_one, :image, :fill, 300, 300, fallback: "no_image.jpg", class: "img_pointer" %>
        <% end %>
      </div>
      <div class="py-1 break-word-index">
       <%= post_one.introduction.truncate(18) %>
      </div>
      <div class="py-1">
        <% post_one.tags.each do |tag| %>
          #<%= tag.name %>
        <% end %>
      </div>
      <div class="py-1">
        <%= post_one.comments.count %>コメント
        <div id="favorit_buttons_<%= post_one.id %>">
          <%= render 'posts/favorit', post_one: post_one %>
        </div>
      </div>
      <div class="py-1">
        <%= post_one.impressionist_count %> 閲覧
      </div>
    </div>
  <% end %>
</div>
<%= paginate posts %>