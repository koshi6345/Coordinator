<!DOCTYPE html>
<html>
  <head>
    <title>Coordinator</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="border-bottom border-dark">
      <nav class="navbar navbar-expand-lg navber-light">
        <div class="container">
          <div class="h1 my-auto">COORDINATOR</div>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
    　      <% if user_signed_in? %>
              <li>
                <%= link_to "マイページ", user_path(current_user),class: 'fas fa-user nav-link text-dark' %>
              </li>
              <li>
                <%= link_to "ユーザー一覧", users_path,class: 'fas fa-users nav-link text-dark' %>
              </li>
              <li>
                <%= link_to "投稿一覧", root_path,class: 'fas fa-paste nav-link text-dark' %>
              </li>
              <li>
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete,class: 'fas fa-sign-out-alt nav-link text-dark' %>
              </li>
            <% else %>
              <li>
                <%= link_to "新規登録", new_user_registration_path,class: 'fas fa-user-plus nav-link text-dark' %>
              </li>
              <li>
                <%= link_to "ログイン", new_user_session_path,class: 'fas fa-sign-in-alt nav-link text-dark' %>
              </li>
              <li>
                <%= link_to "ユーザー一覧", users_path,class: 'fas fa-users nav-link text-dark' %>
              </li>
              <li>
                <%= link_to "投稿一覧", root_path,class: 'fas fa-paste nav-link text-dark' %>
              </li>
            <% end %>
            <%= form_with url: search_path, method: :get, local: true do |f| %>
              <%= f.select :range, options_for_select([['ユーザー'], ['タグ']]) %>
              <%= f.text_field :keyword, value: @keyword %>
              <%= f.submit "検索" %>
            <% end %>
          </div>
        </div>
　　　</nav>
    </header>
    <%= yield %>
    <footer>
      <nav class="navbar navbar-light border-top border-dark">
        <div class="mx-auto font-weight-bold">koushikoushikoushi</div>
      </nav>
    </footer>
  </body>
</html>
