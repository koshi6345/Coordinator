<!DOCTYPE html>
<html>
  <head>
    <title>Coordinator</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=devise-width, initial-scale=1.0, shrink-to-fit=no">

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <%= link_to root_path, class:"no-underline" do %>
          <div class="navbar-brand h1 my-auto">COORDINATOR</div>
        <% end %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNavDropdown">
         <% if user_signed_in? %>
    　      <ul class="navbar-nav mr-auto">
    　        <li class="nav-item">
                <%= link_to "マイページ", user_path(current_user),class: 'fas fa-user nav-link text-light' %>
              </li>
              <li class="nav-item">
                <%= link_to "ユーザー一覧", users_path,class: 'fas fa-users nav-link text-light' %>
              </li>
              <li class="nav-item">
                <%= link_to "投稿一覧", posts_path,class: 'fas fa-paste nav-link text-light' %>
              </li>
              <li class="nav-item">
                <%= link_to "ログアウト", destroy_user_session_path, method: :delete,class: 'fas fa-sign-out-alt nav-link text-light' %>
              </li>
    　      </ul>
          <% else %>
            <ul class="navbar-nav mr-auto">
              <li class="nav-item">
                <%= link_to "新規登録", new_user_registration_path,class: 'fas fa-user-plus nav-link text-light' %>
              </li>
              <li class="nav-item">
                <%= link_to "ログイン", new_user_session_path,class: 'fas fa-sign-in-alt nav-link text-light' %>
              </li>
              <li class="nav-item">
                <%= link_to "サイト概要", about_path,class: 'fas fa-users nav-link text-light' %>
              </li>
              <li class="nav-item">
                <%= link_to "投稿一覧", posts_path,class: 'fas fa-paste nav-link text-light' %>
              </li>
            </ul>
          <% end %>
          <%= form_with url: search_path, method: :get, local: true, class:"form-inline my-2 my-lg-0" do |f| %>
            <%= f.select :range, options_for_select([['ユーザー'], ['タグ']]) %>
            <%= f.text_field :keyword, value: @keyword, class: "form-control mx-sm-2" %>
            <%= f.submit "Search", class:"btn btn-outline-success my-2 my-sm-0" %>
          <% end %>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
