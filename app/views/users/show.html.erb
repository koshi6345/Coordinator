<div class="container">
  <div clsss="row">
    <div class="col-12">
      <%= link_to new_post_path do %>
        <div class="fas fa-plus h4 plus-botton"></div>
      <% end %>
      プロフィール画像 <%= attachment_image_tag(@user, :image, :fill, 100, 100, fallback: "no_image.jpg")%>
      名前 <%= @user.name %>
      自己紹介文 <%= @user.introduction %>
      <% if @user == current_user %>
        <%= link_to "プロフィール編集", edit_user_path %>
      <% elsif current_user.following?(@user) %>
        <%= link_to 'フォロー外す', user_relationships_path(@user), method: :delete %>
      <% else %>
        <%= link_to 'フォロー', user_relationships_path(@user), method: :post %>
      <% end %>
      <% unless @user.id == current_user.id %>
        <% if (current_user.following? @user) && (@user.following? current_user) %>
          <% if @room == true %>
            <%= link_to "チャットへ", room_path(@room_id) %>
          <% else %>
            <%= form_with model:@room_new do |f| %>
              <%= fields_for @entrie do |e| %>
                <%= e.hidden_field :user_id, value: @user.id %>
              <% end %>
              <%= f.submit "チャットを始める", class:"btn btn-primary btn-sm user-show-chat" %>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>